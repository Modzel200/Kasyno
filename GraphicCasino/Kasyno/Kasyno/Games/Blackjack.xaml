<Window x:Class="Kasyno.Games.Blackjack"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Kasyno.Games"
    mc:Ignorable="d"
    Title="BlackJack" Height="700" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"></RowDefinition>
            <RowDefinition Height="80*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80*"></ColumnDefinition>
                <ColumnDefinition Width="20*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock FontSize="60" HorizontalAlignment="Right" Margin="0 0 250 0" VerticalAlignment="Center" FontFamily="Casino Regular" Foreground="red">BlackJack
            </TextBlock>
            <TextBlock Name="accBalance" Grid.Column="1" FontFamily="Casino Regular" FontSize="30" Foreground="blue" VerticalAlignment="Center"></TextBlock>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"></ColumnDefinition>
                <ColumnDefinition Width="70*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Visibility="Visible">
                <TextBlock FontSize="30" Visibility="Visible" Name="inittxt" FontFamily="Casino Regular" HorizontalAlignment="Center">Twoja stawka:</TextBlock>
                <TextBox Name="initbet" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 30" Height="40px" Width="100" FontFamily="Casino Regular" FontSize="30" TextAlignment="Center"></TextBox>
                <Button Height="37" Visibility="Visible" Name="initbutton" Click="Button_Click" VerticalAlignment="Top" Margin="59,99,59,0" FontFamily="Casino Regular" FontSize="30" Background="red">Dobierz kartę</Button>
                <Button Height="37" Name="hitbj" Visibility="Hidden" Click="Button_Click_Hit" VerticalAlignment="Top" Margin="59,99,59,0" FontFamily="Casino Regular" FontSize="30" Background="red">Dobierz kartę</Button>
                <Button Height="37" Visibility="Hidden" Name="standbj" Click="Button_Click_Stand" VerticalAlignment="Top" Margin="59,166,59,0" FontFamily="Casino Regular" FontSize="30" Background="red">Odpuść</Button>
            </Grid>
            <MediaElement Name="bigWin" Grid.Column="1" HorizontalAlignment="Center"  VerticalAlignment="Center" LoadedBehavior="Play"></MediaElement>
            <Grid Grid.Column="1">
                <Grid.Background>
                    <ImageBrush ImageSource="/Games/bjbackground.jpg">

                    </ImageBrush>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Name="userScoreVis" HorizontalAlignment="Left" FontSize="30" FontFamily="Casino Regular" Foreground="Blue" Margin="339,274,0,222" Grid.ColumnSpan="2" Width="273">Twoje punkty:</TextBlock>
                <MediaElement Name="userThrow" LoadedBehavior="Play" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2" Margin="294,349,294,93">
                    <MediaElement.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="-1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </MediaElement.RenderTransform>
                </MediaElement>
                <TextBlock Name="botScoreVis" HorizontalAlignment="Left" FontSize="30" FontFamily="Casino Regular" Foreground="Blue" RenderTransformOrigin="0.5,0.5" Margin="327,6,0,482" Grid.ColumnSpan="2" Width="291">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.107"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>Punkty krupiera:</TextBlock>
                <MediaElement Name="botThrow" LoadedBehavior="Play" RenderTransformOrigin="0.5,0.5" Margin="294,46,294,395" Grid.ColumnSpan="2">
                    <MediaElement.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="-1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </MediaElement.RenderTransform>
                </MediaElement>
            </Grid>
        </Grid>
    </Grid>
</Window>
