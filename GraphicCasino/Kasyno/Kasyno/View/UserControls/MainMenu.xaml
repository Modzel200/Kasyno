<UserControl x:Class="Kasyno.View.UserControls.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kasyno.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ListBox x:Name="gameListBox" HorizontalAlignment="Center" VerticalAlignment="Center"
                 BorderBrush="Blue" BorderThickness="2" Background="red" FontSize="30" FontFamily="Casino Regular"
                 SelectionChanged="gameListBox_SelectionChanged"
                 PreviewMouseLeftButtonDown="gameListBox_PreviewMouseLeftButtonDown" Padding="20 50">
        <ListBoxItem Padding="10">Roulette</ListBoxItem>
        <ListBoxItem Padding="10">Slots</ListBoxItem>
        <ListBoxItem Padding="10">BlackJack</ListBoxItem>
        <ListBoxItem Padding="10">Craps</ListBoxItem>
        <ListBoxItem Padding="10">Exit</ListBoxItem>
    </ListBox>
</UserControl>

